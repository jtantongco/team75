			<ul>
				<li><%=menu_link_to('Register', :controller => 'orientations', :action => 'v_register')%></li>
			</ul>
			<% end %>
		</li>
		<li class="UbcLast"><%=menu_link_to('Logout', :controller => 'accounts', :action => 'logout')%></li>	
