				<li><%=menu_link_to('Create hour report', :controller => 'self_reports', :action => 'create_report')%></li>
			</ul>
			<% end %>
		</li>
		<li>
			<%=menu_link_to('View projects', :controller => 'projects', :action => 'index')%>
		</li>
		<li>
			<%=menu_link_to('Orientations', :controller => 'orientations', :action => 'v_orientations')%>
