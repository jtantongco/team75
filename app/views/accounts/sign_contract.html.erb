<%
@page_title 	= 'Sign volunteer contract'
@page_heading 	= 'Volunteer Contract'
%>
<% form_tag :action => :sign_contract do %>
	<p><%= text_area_tag 'volunteer_contract', volunteer_contract_text, :readonly => 'readonly' %></p>
	<p>
		<%= check_box_tag :accept %>
		<%= label_tag :accept, "I have read the contract thoroughly and accept something something...." %>
	</p>
	<p>
		<%= submit_tag "Submit" %>
	</p>
<% end %>
<%= link_to "Back to My account", :action => :my_account %>